<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ieee.ieeehub" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="org.ieee.ieeehub.provider.IEEEHubProvider"
            android:authorities="org.ieee.ieeehub.provider"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BrowseArticles"
            android:label="@string/title_activity_browse_articles" >
        </activity>
        <activity
            android:name=".ConferenceListActivity"
            android:label="@string/title_conference_list" >
        </activity>
        <activity
            android:name=".ConferenceDetailActivity"
            android:label="@string/title_conference_detail"
            android:parentActivityName=".ConferenceListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ieee.ieeehub.ConferenceListActivity" />
        </activity>
    </application>

</manifest>
